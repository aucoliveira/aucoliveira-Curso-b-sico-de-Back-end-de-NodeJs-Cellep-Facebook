<%- include('../common/header') %>
      


       
  <div class="w3-padding-64 w3-content w3-text-grey" id="noticias">
    <h2 class="w3-text-light-grey">Notícias do mundo da tecnologia</h2>
    <hr style="width:200px" class="w3-opacity">

   
         
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <% noticias.forEach(noticia => { %>
                       
                    <div class="col">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title w3-text-grey"> <%= noticia.titulo %></h5>
                                <p class="card-text"><%= noticia.conteudo.substring(0,50) %> 
                                    ...
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <%= noticia.data_criacao.toLocaleString('pt-BR').split(' ').join(' às ') %>
                                    </small>
                                </p>
                                <a class="btn btn-primary" href="/noticia?id=<%= noticia.id_noticia %>">Saiba Mais</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                    
                </div>
            </div>
        </div>
   
   
       

<%- include('../common/footer') %>